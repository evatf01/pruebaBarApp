<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DrinksFragment"
    android:background="@drawable/background_menu">

    <ImageView
        android:id="@+id/imbArrowBack"
        android:layout_width="48dp"
        android:layout_height="30dp"
        android:padding="4dp"
        android:src="@drawable/arrow_back"
        android:layout_marginTop="16dp"
        android:layout_marginStart="4dp"
        app:layout_constraintEnd_toStartOf="@+id/txtNumMesa"
        app:layout_constraintHorizontal_bias="0.225"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNumMesa"
        android:layout_width="160dp"
        android:layout_height="31dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="RACIONES"
        android:elevation="4dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listaRaciones"
        android:layout_width="match_parent"
        android:layout_height="700dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNumMesa"
        app:layout_constraintVertical_bias="0.813">


    </androidx.recyclerview.widget.RecyclerView>


</androidx.constraintlayout.widget.ConstraintLayout>